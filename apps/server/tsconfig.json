{
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
        "outDir": "build",
        "rootDir": "src",
        "baseUrl": ".",
        "paths": {
            "@repo/server/*": ["src/*"]
        },
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false
    },
    "include": ["src/**/*.ts", "global.d.ts"],
    "exclude": ["node_modules"],
    "ts-node": {
        "files": true
    }
}
